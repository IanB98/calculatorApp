<h1>Calculator</h1>
<hr>

<%= @num1 %><%= @num2 %>
<%= form_with url: "/calculate", method: :get do |form| %>
<%= form.text_field :num1 %> <%= form.text_field :num2 %>
<%= form.submit "Add" %>
<%= form.submit "Subtract" %>
<%= form.submit "Multiply" %>
<%= form.submit "Divide" %>
<% end %>
<hr>
<h3>Answer = <%= @result%></h3>